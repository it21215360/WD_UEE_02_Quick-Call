<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/babyblue">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:backgroundTint="@color/nightblue"
        android:alpha="0.8"
        android:padding="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/readdate"
                    android:text="Date"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/readtitle"
                    android:text="Title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/readtime"
                    android:text="Time"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/readcusid"
                    android:text="Customer"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/scdlupdate"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/nightblue"
                android:src="@drawable/edit_note"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/scdldelete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/nightblue"
                android:src="@drawable/baseline_delete_24"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>